public class Main {

    public static void main(String[] args) {
        System.out.println(isPerfectSquare(1));
    }

    public static boolean isPerfectSquare(int num) {
        if (num == 1 || num == 0) {
            return true;
        }

        for (int i = 0; i < num; i++) {
            if (i * i == num) {
                return true;
            }
        }
        return false;
    }
}
