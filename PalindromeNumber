public class Main {

    public static void main(String[] args) {
        System.out.println(isPalindrome(1321));
    }

    public static boolean isPalindrome(int x) {
        String stringX = "" + x;
        String reversed = "";

        for (int i = stringX.length() - 1; i >= 0; i--) {
                reversed += stringX.charAt(i);
        }

        if (reversed.equals(stringX)) {
                return true;
        }

        return false;
    }
}
